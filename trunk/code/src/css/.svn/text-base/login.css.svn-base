/* ------------------------------- */
/* LOGIN Structure
/* ------------------------------- */

html    { background: #e5e3e3; }
body 	{ margin:0px; padding:0px; font-size:12px; font-family:Arial, Helvetica, sans-serif; color:#333333; }
.clear 	{ margin:0; padding:0; clear: both }

/************************************************************************ wrapper */

#wrapper    { position: relative; width: 340px; margin:90px auto; padding: 0; text-align: center; background: url("../images/login-bd.png") repeat-y;   }
#wrapper .top       { height:30px; display: block; width:340px; background: url("../images/login-top.png") no-repeat; }
#wrapper .bottom    { height:30px; display: block; width:340px; background: url("../images/login-bottom.png") no-repeat; }
/* login form */

.login-form         { position: relative; width:260px; margin:5px auto; text-align:left;  }
.login-form li      { display:block; margin-bottom:8px; }
.login-form label   { display:block; font-weight:bold; font-size:11px; margin-bottom:4px;   }
.login-form input.inputbox  { width:254px; border:1px solid #666666; padding:2px 3px  }
.login-form hr              { border:none; width:auto; border-bottom:1px solid #cccccc; }
.login-form .button { float:right; border: solid 1px #aaaaaa; background: #dddddd; color: #222222; font-weight: bold; font-size: 12px; padding: 4px 8px; }

/* -------------------------------  MESSAGE BOX  ------------------------------ */

#messageBox { padding:0; margin:0; margin-bottom: 5px; }
#messageBox .request-accept {
	background:	#e5f7e3 url("../images/ico-message-accept.png") 7px 7px no-repeat;
	border:		1px solid #c5e1c8;
	font-weight:700;
	color:		#005e20;
	padding:	8px 8px 8px 28px;
	text-align: left;
}

#messageBox .request-warning {
	background:	#FFFFCC url("../images/ico-message-warning.png") 7px 7px no-repeat;
	border:		1px solid #DEDEDE;
	font-weight:700;
	color:		#555;
	padding:	8px 8px 8px 28px;
	text-align: left;
}

#messageBox .request-error {
	background:	#ffebeb url(../images/ico-message-error.png) 7px 7px no-repeat;
	border:		1px solid #f5c1c2;
	font-weight:700;
	color:		#9e0b0f;
	padding:	8px 8px 8px 28px;
	text-align: left;
}

#messageBox .request-info {
	background:	#e8f8fe url(../images/ico-message-info.png) 7px 7px no-repeat;
	border:		1px solid #cfdfe5;
	font-weight:700;
	color:		#004a80;
	padding:	8px 8px 8px 28px;
	text-align: left;
}